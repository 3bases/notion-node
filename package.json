{
  "name": "@3bases/notion-node",
  "private": true,
  "description": "Fast and accurate React renderer for Notion. TS batteries included.",
  "repository": "3bases/notion",
  "author": "Alan Jo <sungle3737@gmail.com>",
  "license": "MIT",
  "version": "1.0.0",
  "engines": {
    "node": ">=12"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "turbo run build",
    "dev": "turbo watch",
    "clean": "rm -rf packages/*/build packages/*/.turbo node_modules/.cache",
    "test": "vitest",
    "coverage": "vitest --run --coverage",
    "lint": "eslint \"**/*.{ts,tsx}\" --fix --ignore-path .gitignore",
    "format": "prettier \"**/*.{js,json,md,css,js,ts,tsx}\" --write --ignore-path .gitignore",
    "release": "turbo run release --force && standard-version -a -t '' --release-as $RELEASE",
    "prerelease": "turbo run prerelease --force && standard-version -a -t '' --skip.changelog --prerelease $PRE",
    "pu": "pnpm publish",
    "predeploy": "turbo build"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^3.3.1",
    "@types/node": "^18.11.0",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "@vitest/coverage-c8": "^0.30.1",
    "eslint": "^8.39.0",
    "eslint-config-next": "^13.2.4",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.1",
    "prettier": "^2.8.8",
    "standard-version": "^9.5.0",
    "tsup": "^6.7.0",
    "tsx": "^3.12.7",
    "turbo": "^1.9.3",
    "typescript": "^4.8.4",
    "vite": "^4.3.3",
    "vitest": "^0.30.1"
  },
  "standard-version": {
    "scripts": {
      "precommit": "git add .",
      "postchangelog": "pnpm format"
    },
    "skip": {
      "changelog": true,
      "commit": true,
      "tag": true
    }
  }
}
